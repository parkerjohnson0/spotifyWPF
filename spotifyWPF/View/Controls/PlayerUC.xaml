                                                            <Style.Triggers>
                                                                <DataTrigger
                                                                    Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                        AncestorType={x:Type Border}},Path=IsMouseOver}"
                                                                    Value="True">
                                                                    <Setter Property="Visibility"
                                                                            Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RepeatButton.Style>
                    </RepeatButton>
                </Grid>
            </Border>
            <TextBlock Grid.Column="1"
                       Grid.Row="2"
                       HorizontalAlignment="Right"
                       Foreground="White"
                       Text="{Binding PlaybackState.Track.Duration}"/>-->
            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                        HorizontalAlignment="Right" Margin="0,0,50,0">
                <Image Name="DeviceImage"
                       Height="20" Width="20" Margin="5">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="/View/Resources/Icons/devices_unclicked.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/View/Resources/Icons/devices_unclicked_alt.png" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding ToggleDeviceControlCommand}"
                                                   CommandParameter="{Binding AppState.DeviceControlVisibility}">

                            </i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                <Image
                    Height="20" Width="20" Margin="5">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMuted}" Value="False">
                                    <Setter Property="Source" Value="/View/Resources/Icons/speaker_unclicked.png" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsMuted}" Value="True">
                                    <Setter Property="Source" Value="/View/Resources/Icons/speaker_clicked.png" />
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Source" Value="/View/Resources/Icons/speaker_unclicked_alt.png" />
                                </Trigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsMuted}" Value="True" />
                                        <Condition
                                            Binding="{Binding RelativeSource={RelativeSource Self},Path=IsMouseOver}"
                                            Value="True" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="Source" Value="/View/Resources/Icons/speaker_clicked_alt.png" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                    <Image.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding MuteVolumeCommand}"></MouseBinding>
                    </Image.InputBindings>
                </Image>
                <Border BorderBrush="Transparent" BorderThickness="3" Background="Transparent"
                        Height="25">
                    <Grid>
                        <Rectangle Height="5" Width="100" Fill="#5e5e5e" RadiusX="2"
                                   RadiusY="2"
                                   x:Name="VolumeBar"
                                   IsHitTestVisible="False"
                                   Margin="5">
                        </Rectangle>
                        <RepeatButton Command="{Binding VolumeSliderCommand}"
                                      CommandParameter="{Binding ElementName=VolumeBar}"
                                      Interval="10">
                            <RepeatButton.Style>
                                <Style TargetType="{x:Type RepeatButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Grid Background="Transparent">
                                                    <Rectangle Height="5" Width="{Binding Volume}"
                                                               HorizontalAlignment="Left" RadiusX="2"
                                                               RadiusY="2"
                                                               Margin="5">
                                                        <Rectangle.Style>
                                                            <Style TargetType="{x:Type Rectangle}">
                                                                <Setter Property="Fill" Value="White"></Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                    AncestorType={x:Type Border}},Path=IsMouseOver}"
                                                                        Value="True">
                                                                        <Setter Property="Fill" Value="#1db954" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Rectangle.Style>
                                                    </Rectangle>
                                                    <Ellipse Height="10" Width="10" Fill="White"
                                                             HorizontalAlignment="Left"
                                                             Margin="{Binding Volume, Converter={StaticResource SliderCircleConv}}">
                                                        <Ellipse.Style>
                                                            <Style TargetType="{x:Type Ellipse}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                <Style.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding RelativeSource={RelativeSource FindAncestor, 
                                                                        AncestorType={x:Type Border}},Path=IsMouseOver}"
                                                                        Value="True">
                                                                        <Setter Property="Visibility"
                                                                            Value="Visible" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Ellipse.Style>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </RepeatButton.Style>
                        </RepeatButton>
                    </Grid>
                </Border>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>